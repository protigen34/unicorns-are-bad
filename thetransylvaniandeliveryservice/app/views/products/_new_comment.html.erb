<div class="row">
  <div class="col-12 product-reviews__container-new_comment text-center">
    <% if signed_in? %>
      <h4>Add a review:</h4>
      <%= form_for([@product, @product.comments.build], remote: true) do |f| %>
        <div class="form-group">
          <%= f.label :body, "Comments" %><br>
          <%= f.text_area :body, class:"form-control" %>
    </div>
  </div>
</div>
        <div class="rating"></div>
    <p><small>
          <%= f.submit "Submit", class:"btn" %></small>
    </p>
  <% end %>
<% end %>
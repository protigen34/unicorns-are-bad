<div class="container">
  <div class="user_form" role="form">

    <h2 class="form-heading text-center brand">
      Transience
    </h2>

    <h3 class="form-heading text-center">
      Sign in to meet your Coach.
    </h3>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="form-group">
      <%= f.label :email, hidden: true %>
      <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email address" %>
    </div>

    <div class="form-group">
      <%= f.label :password, hidden: true %>
      <%= f.password_field :password, autocomplete: "off", placeholder: "Your password", class: "form-control" %>
    </div>

      <% if devise_mapping.rememberable? -%>
        <div class="checkbox">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in", class: "btn btn-lg btn-default btn-block" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

 </div>
</div>